head
  link#bootstrap-css(href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css' rel='stylesheet')
  link(href='css/style.css' rel='stylesheet')
  script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js')
  script(src='//code.jquery.com/jquery-1.11.1.min.js')
.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      h1.text-center.login-title  Signup 
      .account-wall
        img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120' alt='')
        form.form-signin(method='post' action='/register')
          input.form-control(type='text' name='username' placeholder='Username' value=postValues.username required='' autofocus='')
          input.form-control(type='email' name='email' placeholder='Email' value=postValues.email required='' autofocus='')
          input.form-control(type='text' name='password' placeholder='Password' value=postValues.password required='' autofocus='')
          input.form-control(type='text' name='cpassword' placeholder='Confirm Password' value=postValues.confirm required='' autofocus='')
          button.btn.btn-lg.btn-primary.btn-block(type='submit')   
            | Sign Up
          br
          a(href='/')
            button.btn.btn-lg.btn-primary.btn-block.btn-danger(type='button') Sign In 
            p.error-msg #{msg}  
